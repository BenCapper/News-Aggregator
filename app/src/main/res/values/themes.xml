<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.News" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorHint">@color/grey_500</item>
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.News.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.News.Login">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.News.bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="Theme.News.email">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.News.bg">
        <item name="android:background">@color/white</item>
        <item name="android:editTextColor">@color/black</item>
    </style>

    <style name="Theme.News.nav">
        <item name="colorControlNormal">@color/grey_500</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:colorButtonNormal">@color/black</item>
        <item name="android:subtitleTextColor">@color/orange</item>
        <item name="colorAccent">@color/grey_500</item>
    </style>

    <style name="Theme.News.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/promoted</item>
        <item name="android:background">@color/orange</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>

    <style name="Theme.News.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlHighlight">@color/grey_500</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="colorAccent">@color/black</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/dark</item>
        <item name="android:editTextColor">@color/dark</item>
        <item name="android:textColorHint">@color/dark</item>
    </style>
    <style name="Theme.News.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- START Firebase Resources-->
    <!-- Activity with no Title -->
    <style name="ThemeOverlay.MyNoTitleActivity" parent="Theme.News">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.News.Splash">
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
    </style>

    <!-- Dark Buttons -->
    <style name="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">#FFECEAEA</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Light EditTexts -->
    <style name="ThemeOverlay.MyLightEditText" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="ThemeOverlay.MyTextDetail" parent="Theme.News">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">5</item>
        <item name="android:padding">4dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ThemeOverlay.FirebaseIcon" parent="Theme.News">
        <item name="android:layout_marginTop">@dimen/icon_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/icon_bottom_margin</item>
    </style>


    <style name="Widget.AppCompat.Button.Colored" parent="Theme.News">
        <item name="android:backgroundTint">@color/grey_700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ThemeOverlay.MyTitleText" parent="Theme.News">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
    </style>
    <!-- END Firebase Resources-->
</resources>