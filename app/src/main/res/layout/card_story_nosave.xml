<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="story"
            type="org.ben.news.models.StoryModel" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:elevation="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView2_nosave"
            android:layout_width="wrap_content"
            android:layout_height="130dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="130dp"
            android:background="#FFFFFF"
            android:padding="16dp">

            <Button
                android:id="@+id/button2"
                android:layout_width="54dp"
                android:layout_height="36dp"
                android:layout_below="@+id/headline_nosave"
                android:layout_marginStart="-80dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/link_nosave"
                android:background="@android:color/transparent"
                android:textSize="10sp"
                app:icon="@drawable/ic_share"
                app:iconTint="#000000" />

            <TextView
                android:id="@+id/link_nosave"
                android:layout_width="269dp"
                android:layout_height="25dp"
                android:layout_below="@+id/headline_nosave"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="126dp"
                android:text="@{story.outlet}"
                android:textColor="@color/dark"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/date_nosave"
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:text="@{story.date}"
                android:textColor="@color/dark"
                android:textSize="10sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/headline_nosave"
                android:layout_width="392dp"
                android:layout_height="48dp"
                android:layout_below="@+id/date_nosave"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="3dp"
                android:text="@{story.title}"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold" />



        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>